.content{
  position: relative;
}
#bg{
  display: block;
  width: 100%;
  height:100vh;
  position: absolute;
  z-index:1;
}
.index_content {
  height:100vh;
  width:100%;
  position: absolute;
  z-index: 2;
}
.logo_content{
  overflow: hidden;
}
.index_content .index_logo{
  height: 100rpx;
  width:100rpx;
  display:block;
  float:left;
}
.index_content .logo_txt{
  margin-left: 10rpx;
  line-height: 100rpx;
  display:block;
  float:left;
  font-size: 34rpx;
}
.bottom_content{
    width:100%;
    position: absolute;
    bottom: 5vh;
}
.code_content{
    width:50%;
    border-radius:50rpx;
    background:black;
    margin:0 auto;
}
.play_content{
    width:50%;
    border-radius:50rpx;
    background:black;
    margin:0 auto;
}
.play_content .play_txt{
    color:#fff;
    line-height: 100rpx;
    text-align: center;
    display:block;
}
.code_btn{
    height:100rpx;
    overflow: hidden;
}
