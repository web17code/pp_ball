}
.userInfo_content{
    background: #ffffff;
    width:90rpx;
    height: 90rpx;
    border:2rpx solid #ccc;
    border-radius:50%;
    position:fixed;
    right:30rpx;
    bottom:5vh;
}
.userInfo_content .userInfo_icon{
    width: 70rpx;
    height:70rpx;
    display: block;
    margin:9rpx auto;
}