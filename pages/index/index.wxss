.code_btn .code_icon_img{
    height:60rpx;
    width:60rpx;
    float: left;
    display:block;
    margin-top: 20rpx;
    margin-left:80rpx;
}
.code_btn .code_txt{
    margin-left:20rpx;
    color:#fff;
    line-height: 100rpx;
    text-align: center;
    float: left;
